{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
        "webpack-env"
        ],
        "paths": {
        "@/*": [
            "src/*"
        ]
        },
        "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "src/assets/json/*.json",
        "src/assets/css/*.scss",
        "src/assets/css/*.less"
    ]
}